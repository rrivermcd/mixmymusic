<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>  
        <h4>Start a new song</h4>
        <%= render 'shared/track_upload_form' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
     </section>
    </aside>
    <div class="span8">
      <h3>Newly added songs</h3>
      <ul class='playlist js-track-list'>
      <%= render @songs%>
      </ul>
    <%= render 'shared/player' %>
    </section>
      <h3>Who's shouting about what?</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>MMM Under Development</h1>

     <%= link_to "You can't sign up yet!",'#', class: "btn btn-large btn-primary" %>
  </div>

<% end %>

