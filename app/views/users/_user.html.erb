<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.username, user %>
  <span class='pull-right'>
	  <% if current_user.admin? && !current_user?(user) %>
	    <%= button_to "delete", user, method: :delete,
	    	:class => "btn btn-default btn-xs",
	        data: { confirm: "You sure?" } %>
	  <% end %>
	</span>
</li>