
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
      <h5>
        AKA: <%= @user.name %>
      </H5>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <h4>About Me</h4>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
      <% if current_user == @user %>    
        <section>
          <%= render 'shared/upload_form' %>
        </section>  
      <% end %>
    <section>
      <%= render 'shared/player' %>
    </section>
    
    <% if @user.microposts.any? %>
      <h3><%=@user.username%>'s shouts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
