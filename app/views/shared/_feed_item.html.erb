  <li class='list-group-item' id="<%= feed_item.id %>">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
      <span class="user">
        <%= link_to feed_item.user.username, feed_item.user %>
      </span>
      <span class="content"><%= feed_item.content %></span>     
        <% @songs.each do |song| %>
          <% if song.id == feed_item.song_id %> 
            <span style='display: block;'><span class='glyphicon glyphicon-music'></span> <%= song.name %></span>
          <% end %>
        <% end %> 
      <span class="timestamp">
        Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
      </span>
    <% if current_user?(feed_item.user) %>
    <span class='pull-right'>
      <%= button_to "delete", feed_item, method: :delete,
          :class => "btn btn-default btn-xs",
          data: { confirm: "Do you really want to delete this post?" },
          title: feed_item.content %>
      <% end %>
    </span>
  </li>
